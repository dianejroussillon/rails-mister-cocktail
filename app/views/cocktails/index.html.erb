<div class="banner">
  <div class="banner-content">
    <h1>Cocktails are the Best</h1>
    <p>Want to try one of them ?</p>
  </div>
</div>

<div class="container">
    <h1>All the Cocktails</h1>
  <div class="card-container">
    <% @cocktails.each do |cocktail| %>
    <div class="card" style="background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.3) 50%, rgba(0, 0, 0, 0.75) 80%), url('https://picsum.photos/300/300/?random');">
      <div class="title-content">
        <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
      </div>
      <div class="utility-info">
        <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe ,url_for(action: :destroy,id: cocktail),method: :delete, data: {confirm: "Are you sure?"} %>
      </div>
    </div>
      <% end %>
  </div>
</div>
